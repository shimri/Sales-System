{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/delivery/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/delivery/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/delivery",
  "projects": {
    "delivery": {
      "type": "application",
      "root": "apps/delivery",
      "entryFile": "main",
      "sourceRoot": "apps/delivery/src",
      "compilerOptions": {
        "tsConfigPath": "apps/delivery/tsconfig.app.json"
      }
    },
    "sales": {
      "type": "application",
      "root": "apps/sales",
      "entryFile": "main",
      "sourceRoot": "apps/sales/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sales/tsconfig.app.json"
      }
    }
  }
}